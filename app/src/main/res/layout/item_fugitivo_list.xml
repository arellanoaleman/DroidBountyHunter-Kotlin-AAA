<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/imagenFugitivo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal="true"
            android:src="@android:drawable/ic_menu_gallery"
            />

    <TextView
            android:id="@+id/textoRenglon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/imagenFugitivo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imagenFugitivo"
            android:textSize="20dp"
            tools:text="Nombre Fugitivo"
            />

    <TextView
            android:id="@+id/txtFechaCaptura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="@id/imagenFugitivo"
            app:layout_constraintStart_toEndOf="@+id/imagenFugitivo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textoRenglon"
            tools:text="18/12/2023"
            />

</androidx.constraintlayout.widget.ConstraintLayout>